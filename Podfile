
platform :ios, '13.0'

target 'simple-memory-game' do
  use_frameworks!
  
  # For Dependency Injection
  pod 'NeedleFoundation', :git => 'https://github.com/uber/needle'
  
    # For RESTful Networking
  pod 'MoyaNetworkClient-Combine', :git => 'https://github.com/Peeoner174/MoyaNetworkClient-Combine.git', :commit => '6a41b0bd82b9dbb6d6495c73738fcaf17e181b13'
  
  # For random set of system icons
  pod 'SFSafeSymbols', '~> 2.1.1'

end
